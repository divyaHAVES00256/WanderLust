<!-- Airbnb-style Search Bar -->
<div class="search-bar-container d-flex justify-content-center my-4">
  <form class="search-bar d-flex align-items-center rounded-pill shadow px-3 py-2" action="/listings" method="GET">
    <div class="input-group px-3 border-end">
      <div class="d-flex flex-column">
        <label class="fw-bold text-muted small mb-1">Where</label>
        <input type="text" name="location" class="form-control border-0 p-0" placeholder="Search destinations">
      </div>
    </div>
    <div class="input-group px-3 border-end">
      <div class="d-flex flex-column">
        <label class="fw-bold text-muted small mb-1">Check in</label>
        <input type="date" name="checkin" class="form-control border-0 p-0">
      </div>
    </div>
    <div class="input-group px-3 border-end">
      <div class="d-flex flex-column">
        <label class="fw-bold text-muted small mb-1">Check out</label>
        <input type="date" name="checkout" class="form-control border-0 p-0">
      </div>
    </div>
    <div class="input-group px-3">
      <div class="d-flex flex-column">
        <label class="fw-bold text-muted small mb-1">Who</label>
        <input type="number" name="guests" class="form-control border-0 p-0" placeholder="Add guests" min="1">
      </div>
    </div>
    <button type="submit" class="btn btn-danger rounded-circle ms-3">
      <i class="fa fa-search"></i>
    </button>
  </form>
</div>

