<% if (success && success.length) { %>
        <div class="alert alert-success alert-dismissible fade show text-center mt-3" role="alert" id="flash-success">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
<% } %>

<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show text-center mt-3" role="alert" id="flash-error">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
